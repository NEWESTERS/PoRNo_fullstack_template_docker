{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": false,
      "declaration": true,
      "lib": [
         "es2017.object",
         "es2015",
         "es2017"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
   },
   "files": [
      "./node_modules/@types/node/index.d.ts"
   ],
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}